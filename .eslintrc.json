{
    "root": true,
    "extends": [
        "next",
        "next/core-web-vitals",
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "plugins": [
        "@typescript-eslint"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 2020,
        "sourceType": "module",
        "project": "./tsconfig.json"
    },
    "rules": {
        "@typescript-eslint/no-unused-vars": [
            "warn",
            {
                "argsIgnorePattern": "^_"
            }
        ],
        "@typescript-eslint/explicit-module-boundary-types": "off",
        "no-console": "warn",
        "prefer-const": "warn",
        "react/jsx-key": "warn"
    },
    "ignorePatterns": [
        "node_modules/",
        ".next/",
        "out/",
        "public/",
        "netlify/"
    ]
}