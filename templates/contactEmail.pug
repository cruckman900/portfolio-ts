doctype html
html
    head
        meta(charset="UTF-8")
        style.
            @import url('https://fonts.googleapis.com/css2?family=Open+Sans&display=swap');
    body(style="margin:0; padding:1rem; background-color:#1a1a1a; font-family:'Open Sans', Arial, sans-serif; color:#f0f0f0;")
        table(width="100%" cellpadding="0" cellspacing="0" border="0" style="background-color:#1a1a1a; width:100%; padding:2rem;")
            tr
                td
                    h1(style="color:#d9534f; font-size:1.5rem; margin-bottom:1rem;") Contact Submission
                    p(style="margin-bottom:1rem;")
                        strong Name:
                        | #{name}
                    p(style="margin-bottom:1rem;")
                        strong Email:
                        | #{email}
                    p(style="margin-bottom:1rem;")
                        strong Message:
                    p(style="margin-bottom:1rem;") #{message}
